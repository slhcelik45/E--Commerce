                                    <p>@Model.UrunAciklama</p>
                                    <span>
                                        <input type="text" id="hdnUrunSatisFiyat" name="UrunSatisFiyat" value="@Model.UrunSatisFiyat" />
                                        <span>@Model.UrunSatisFiyat.ToString().Substring(0, 6) TL</span>
                                        <label>Adet:</label>
                                        <input type="text" value="1" id="urunAdet" name="Adet" />
